extends partials/layout

block vars
  - const title = 'Amazon Crawl';
  - const pageID = 'index';

block eod
  script
    +loadModule('pages/index.js')

block content
  main(class='home-main')
    form(method="POST" action="/product")
      <h1>Welcome to ProxyCrawl App</h1>
      div(class='mt-100')
        div ProxyCrawl Token
        input(name="token")
      div(class='section-2')
        div ProxyCrawl url
        <div> (Example url: https://www.amazon.com/Philips-Norelco-AT830-46-Frustration/dp/B00JITDVD2 )</div>
        input(name="url")
      input(type="submit" class='submit')
